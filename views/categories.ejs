<%- include('partials/header', { title: 'Categorías' }) %>
<div class="container mt-5">
    <h1 class="text-center">Categorías</h1>
    <a href="/categories/create" class="btn btn-primary mb-3">Crear Categoría</a>
    <ul class="list-group mt-4">
        <% categories.forEach(category => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= category.name %>
                <div>
                    <a href="/categories/edit/<%= category.id %>" class="btn btn-warning btn-sm">Editar</a>
                    <form action="/categories/delete/<%= category.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </div>
            </li>
        <% }) %>
    </ul>
</div>
<%- include('partials/footer') %>
